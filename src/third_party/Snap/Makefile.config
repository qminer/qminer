#
#	Global configuration for SNAP makefiles
#

GLIB = base
SNAP = snap-core
GLIBADV = mine
GLIBMISC = misc
SNAPADV = snap-adv
SNAPEXP = snap-exp

ROOT = ../../..
CGLIB = $(ROOT)/glib/$(GLIB)
CGLIBADV = $(ROOT)/glib/$(GLIBADV)
CGLIBMISC = $(ROOT)/glib/$(GLIBMISC)
CSNAP = ../$(SNAP)

EXGLIB = $(ROOT)/../glib/$(GLIB)
EXSNAP = ../../$(SNAP)
EXGLIBADV = ../../../glib/$(GLIBADV)
EXGLIBMISC = ../../../glib/$(GLIBMISC)
EXSNAPADV = ../../$(SNAPADV)
EXSNAPEXP = ../../$(SNAPEXP)

UNAME := $(shell uname)

ifeq ($(UNAME), Linux)
 # # Linux flags
 # CC = g++
 # #CXXFLAGS += -std=c++98 -Wall
 # CXXFLAGS += -std=c++0x -Wall -Wno-deprecated-declarations  
 # #CXXFLAGS += -O3
 # # turn on for crash debugging, get symbols with <prog> 2>&1 | c++filt
 # #CXXFLAGS += -g -rdynamic
  #CXXOPENMP = -fopenmp
  #LDFLAGS +=
  #LIBS += -lrt
  # Linux flags
  CC = g++
  CXXFLAGS += -std=c++0x -Wall -Wno-deprecated-declarations
  #CXXFLAGS += -O3
  # turn on for crash debugging, get symbols with <prog> 2>&1 | c++filt
  CXXFLAGS += -g -rdynamic
  LDFLAGS += -fopenmp
  LIBS += -lrt -luuid

else ifeq ($(UNAME), Darwin)
  # OS X flags
  CC = g++
  CXXFLAGS += -std=c++98 -Wall
  CXXFLAGS += -O3
  CXXOPENMP = -fopenmp
  LDFLAGS +=
  LIBS +=

else ifeq ($(shell uname -o), Cygwin)
  # Cygwin flags
  CC = g++
  CXXFLAGS += -Wall
  CXXFLAGS += -O3
  CXXOPENMP = -fopenmp
  LDFLAGS +=
  LIBS +=

endif

